{
    "name": "ucrm-plugins/template",
    "description": "A simple UCRM Plugin Template",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Spaeth",
            "email": "rspaeth@mvqn.net"
        }
    ],
    "require": {
        "php": "~7.1",
        "ext-json": "*",
        "ext-zip": "*",

        "mvqn/localization": "1.*",
        "mvqn/twig": "1.*",

        "ucrm-modules/common": "1.*",
        "ucrm-modules/rest": "1.*",
        "ucrm-modules/data": "1.*",

        "slim/slim": "^3.1",
        "slim/twig-view": "^2.0",
        "monolog/monolog": "^1.24"
    },
    "require-dev": {
        "phpunit/phpunit": "7.2.7",
        "vlucas/phpdotenv": "2.5.*"
    },
    "autoload": {
        "psr-4": {
            "UCRM\\": "lib/UCRM"
        }
    },
    "autoload-dev": {
        "psr-4": {
        }
    },
    "scripts": {
        "create": [
            "@php bin/composer.php create"
        ],
        "bundle": [
            "@composer --no-interaction --verbose dump-autoload",
            "@php bin/composer.php bundle"
        ]
    }
}
